        <Label Grid.Column="0" Grid.Row="3" Margin="326,130,498,165" FontSize="18">Name</Label>
        <TextBox Grid.Column="0" Grid.Row="3" Margin="327,168,326,137" HorizontalContentAlignment="Center">Stefan</TextBox>

